<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= I18n.t('views.plugins.camaleon_cms_rating.admin.settings.title', default: 'Plugin Settings') %></h4>
  </div>
  <div class="panel-body">
    <%= form_tag(url_for(action: :save_settings), class: 'validate') do %>
      <div class="form-group">
        <label><%= I18n.t('views.plugins.camaleon_cms_rating.admin.settings.option', default: 'Option Setting') %></label>
        <%= text_field_tag 'options[my_setting]', @plugin.get_option('my_setting'), class: 'form-control required' %>
      </div>
      <div class="form-group">
        <label><%= I18n.t('views.plugins.camaleon_cms_rating.admin.settings.meta', default: 'Meta Setting') %></label>
        <%= text_field_tag 'metas[my_setting]', @plugin.get_meta('my_setting'), class: 'form-control required' %>
      </div>
      <%= render partial: "camaleon_cms/admin/settings/custom_fields/render", locals: {record: @plugin, field_groups: @plugin.get_field_groups} %>
      <div class="form-group text-right">
        <%= submit_tag I18n.t('views.plugins.camaleon_cms_rating.admin.settings.save', default: 'Save'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
